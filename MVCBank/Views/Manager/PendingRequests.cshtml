@model IEnumerable<MVCBank.Models.ViewModels.PendingAccountRequestViewModel>
@{
    ViewBag.Title = "Pending Requests";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Pending Requests</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No pending requests.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Type</th>
                    <th>Account ID</th>
                    <th>Customer</th>
                    <th>Amount</th>
                    <th>Start Date</th>
                    <th style="width: 240px;">Action</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.AccountType</td>
                    <td>@r.AccountID</td>
                    <td>@r.CustomerName (@r.CustomerID)</td>
                    <td>@(r.Amount.HasValue ? r.Amount.Value.ToString("C0") : "-")</td>
                    <td>@(r.StartDate.HasValue ? r.StartDate.Value.ToString("dd MMM yyyy") : "-")</td>
                    <td>
                        @using (Html.BeginForm("UpdateAccountRequest", "Manager", FormMethod.Post, new { @class = "d-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("accountType", r.AccountType)
                            @Html.Hidden("accountId", r.AccountID)
                            @Html.Hidden("decision", "approve")
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        }
                        @using (Html.BeginForm("UpdateAccountRequest", "Manager", FormMethod.Post, new { @class = "d-inline ms-2" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("accountType", r.AccountType)
                            @Html.Hidden("accountId", r.AccountID)
                            @Html.Hidden("decision", "reject")
                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}