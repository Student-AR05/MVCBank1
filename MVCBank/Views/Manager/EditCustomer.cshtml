@model MVCBank.Models.ViewModels.CustomerEditViewModel
@{
    ViewBag.Title = "Edit Customer";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Edit Customer</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CustID)
    <div class="mb-3">
        @Html.LabelFor(m => m.CustName, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.CustName, new { @class = "form-control", pattern = "[A-Za-z][A-Za-z ]{1,}", title = "Only letters and spaces, min 2 characters" })
        @Html.ValidationMessageFor(m => m.CustName, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.DOB, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", max = DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd") })
        @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.PAN, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.PAN, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", pattern = "\\d{10}", title = "10 digit phone number" })
        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Address, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Gender, new { @class = "form-label" })
        @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { new { Value = true, Text = "Male" }, new { Value = false, Text = "Female" } }, "Value", "Text", Model.Gender), "Select Gender", new { @class = "form-select" })
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("RemoveCustomer", "Manager")" class="btn btn-secondary">Back</a>
}
