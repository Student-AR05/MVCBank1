@{
    ViewBag.Title = "Loan - Close Account";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Close Loan Account</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="alert alert-info" role="alert" style="max-width:700px;">
    Closing loan accounts is restricted. Please contact a Manager to perform this action.
</div>