@{
    ViewBag.Title = "Savings - Deposit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Deposit to Savings Account</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form method="post" action="@Url.Action("Deposit", "SavingEmployee")">
    @Html.AntiForgeryToken()

    <div class="mb-3" style="max-width:400px;">
        <label class="form-label">Account ID (SB...)</label>
        <input type="text" name="accountId" class="form-control" placeholder="SB00001" />
    </div>

    <div class="mb-3" style="max-width:300px;">
        <label class="form-label">Amount</label>
        <input type="number" step="0.01" min="0.01" name="amount" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Deposit</button>
</form>