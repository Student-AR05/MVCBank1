@{
    ViewBag.Title = "Savings Employee Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Savings Department</h2>

<p>Welcome to the savings employee dashboard. Use the actions below:</p>

<div class="list-group" style="max-width:600px;">
    <a class="list-group-item list-group-item-action" href="@Url.Action("AddAccount", "SavingEmployee")">Add Account</a>
    <a class="list-group-item list-group-item-action" href="@Url.Action("CloseAccount", "SavingEmployee")">Close Account</a>
    <a class="list-group-item list-group-item-action" href="@Url.Action("Deposit", "SavingEmployee")">Deposit</a>
    <a class="list-group-item list-group-item-action" href="@Url.Action("Withdraw", "SavingEmployee")">Withdraw</a>
    <a class="list-group-item list-group-item-action" href="@Url.Action("ViewTransactions", "SavingEmployee")">View Transactions</a>
</div>
